<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #575965;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kursovoi.client.user.AddCardController">
    <children>
        <AnchorPane layoutY="54.0" prefHeight="346.0" prefWidth="700.0" style="-fx-background-color: #fefefe;">
            <children>
                <Label layoutX="224.0" layoutY="27.0" text="Форма добавления новой карты">
                    <font>
                        <Font name="MS Outlook" size="17.0" />
                    </font>
                </Label>
                <Button fx:id="addButton" layoutX="310.0" layoutY="292.0" mnemonicParsing="false" onAction="#addButtonClicked" style="-fx-background-color: #fefefe;" text="Добавить">
                    <font>
                        <Font name="MS Outlook" size="14.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <TextField fx:id="nameField" layoutX="249.0" layoutY="85.0" prefHeight="26.0" prefWidth="202.0" promptText="Имя владельца" style="-fx-background-color: #fefefe; -fx-border-color: silver;">
                    <font>
                        <Font name="MS Outlook" size="14.0" />
                    </font>
                </TextField>
                <ComboBox fx:id="cardIssuerComboBox" layoutX="249.0" layoutY="127.0" prefHeight="30.0" prefWidth="202.0" promptText="Эмитент карты" style="-fx-background-color: #fefefe; -fx-border-color: silver;" />
                <ComboBox fx:id="typeComboBox" layoutX="248.0" layoutY="173.0" prefHeight="30.0" prefWidth="202.0" promptText="Тип карты" style="-fx-background-color: #fefefe; -fx-border-color: silver;" />
                <ComboBox fx:id="accountComboBox" layoutX="249.0" layoutY="221.0" prefHeight="30.0" prefWidth="202.0" promptText="Выберите счет" style="-fx-background-color: #fefefe; -fx-border-color: silver;" />
            </children>
        </AnchorPane>
        <ToolBar layoutY="7.0" prefHeight="40.0" prefWidth="700.0" style="-fx-background-color: #575965;">
            <items>
                <Button fx:id="myAccountButton" mnemonicParsing="false" onAction="#myAccountButtonClicked" prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #fefefe;" text="Учетная запись">
                    <font>
                        <Font name="MS Outlook" size="12.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="historyButton" mnemonicParsing="false" onAction="#historyButtonClicked" prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #fefefe;" text="История">
                    <font>
                        <Font name="MS Outlook" size="12.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="paymentButton" mnemonicParsing="false" onAction="#paymentButtonClicked" prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #fefefe;" text="Платежи">
                    <font>
                        <Font name="MS Outlook" size="12.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="loanButton" mnemonicParsing="false" onAction="#loanButtonClicked" prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #fefefe;" text="Кредиты">
                    <font>
                        <Font name="MS Outlook" size="12.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="depositButton" mnemonicParsing="false" onAction="#depositButtonClicked" prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #fefefe;" text="Вклады">
                    <font>
                        <Font name="MS Outlook" size="12.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="rateButton" mnemonicParsing="false" onAction="#rateButtonClicked" prefHeight="26.0" prefWidth="110.0" style="-fx-background-color: #fefefe;" text="Курсы валют">
                    <font>
                        <Font name="MS Outlook" size="12.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </items>
        </ToolBar>
    </children>
</AnchorPane>
