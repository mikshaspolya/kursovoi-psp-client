<AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #575965;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kursovoi.client.admin.AdminLoanController">
   <children>
      <AnchorPane layoutY="54.0" prefHeight="346.0" prefWidth="700.0" style="-fx-background-color: #fefefe;">
         <children>
            <Label layoutX="261.0" layoutY="24.0" text="Все кредиты клиентов">
               <font>
                  <Font name="MS Outlook" size="17.0" />
               </font>
            </Label>
            <ListView fx:id="loanListView" layoutX="29.0" layoutY="67.0" prefHeight="200.0" prefWidth="642.0" />
            <Button fx:id="editLoanStatusButton" layoutX="262.0" layoutY="285.0" mnemonicParsing="false" onAction="#editLoanStatusButtonClicked" style="-fx-background-color: #fefefe;" text="Изменить статус кредита">
               <font>
                  <Font name="MS Outlook" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </AnchorPane>
      <ToolBar layoutY="7.0" prefHeight="40.0" prefWidth="700.0" style="-fx-background-color: #575965;">
