<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #575965;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kursovoi.client.user.ConverterController">
   <children>
      <AnchorPane layoutY="54.0" prefHeight="346.0" prefWidth="700.0" style="-fx-background-color: #fefefe;">
         <children>
            <Button fx:id="convertButton" layoutX="289.0" layoutY="269.0" mnemonicParsing="false" onAction="#convertButtonClicked" style="-fx-background-color: #fefefe;" text="Конвертировать">
               <font>
                  <Font name="MS Outlook" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label layoutX="282.0" layoutY="41.0" text="Конвертер валют">
               <font>
                  <Font name="MS Outlook" size="17.0" />
               </font>
            </Label>
            <Label layoutX="246.0" layoutY="178.0" text="BYN">
               <font>
                  <Font name="MS Outlook" size="17.0" />
               </font>
            </Label>
            <ComboBox fx:id="currencyComboBox" layoutX="215.0" layoutY="128.0" prefHeight="26.0" prefWidth="94.0" style="-fx-background-color: #fefefe; -fx-border-color: silver; -fx-border-radius: 10;" />
            <Label fx:id="sumToBynLabel" layoutX="410.0" layoutY="178.0">
               <font>
                  <Font name="MS Outlook" size="17.0" />
               </font>
            </Label>
            <TextField fx:id="sumTextField" layoutX="351.0" layoutY="129.0" prefHeight="27.0" prefWidth="151.0" style="-fx-background-color: #fefefe; -fx-border-color: silver; -fx-border-radius: 10;" />
